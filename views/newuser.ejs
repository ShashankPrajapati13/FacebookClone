    <% data.forEach(function(val){ %>
      <div id="card">
        <div id="carddp"></div>
        <h1 style="color: wheat;">
          <%= val.user.username %>
        </h1>
        <h2>
          <%= val.title %>
        </h2>
        <div id="caption">
          <p style="color: whitesmoke;">
            <%= val.para %>
          </p>
        </div>
        <div id="image"><img style="width: 100%;" src="../images/<%= val.postImage %>"></div>
        <div id="likes">
          <% if(val.likes.indexOf(User._id)===-1){ %>
            <a id="notlike" href="/likes/<%= val._id %>">
              <ion-icon name="thumbs-up"></ion-icon>
              <%= val.likes.length %>
            </a>
            <% }else{ %>
              <a id="like" href="/likes/<%= val._id %>">
                <ion-icon name="thumbs-up"></ion-icon>
                <%= val.likes.length %>
              </a>
              <% } %>
                <a id="cmt" href=""><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
